<% 
    selectboxHelper = (name, items , optionSelected = "" ) => {
        let xhtml = '';

        items.forEach((item) => {

            let selected = (item.id == optionSelected ) ? `select = "selected"` : '' ; 

            let id = (item.id == undefined ) ? `novalue` :  item.id ; 

            xhtml += `<option value="${id}">${item.name}</option>`
        });
       
        return `<select name="${name}" class="custom-select custom-select-sm">${xhtml}</select>`;
    }
%>



